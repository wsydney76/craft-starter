{% extends "_layouts/base.twig" %}

{% block body %}
    <body class="{{ global_bodyClass ?? 'text-base antialiased' }}">
    {% block nav %}
        {% include '_layouts/partials/nav.twig' %}
    {% endblock nav %}

    <div id="canvas" class="{{ global_canvasClass ?? 'bg-light' }}">
        {% block canvas %}

            <div id="header">
                {% block header %}

                    <div id="featured1">
                        {% block featured1 %}{% endblock %}
                    </div>

                    <div id="title" class="{{ global_titleSectionClass ?? ''}}">
                        {% block title %}
                            <header>
                                <div id="title-container" class="container mx-auto">
                                    {% block titleContainer %}
                                        <div class="pt-4 pl-2 pb-4">
                                            <div id="title-top">{% block titleTop %}{% endblock %}</div>
                                            <h1 id="title-text" class="mb-3 {{ global_titleTextClass ?? 'font-light' }}">
                                                {% block titleText %}{{ global_title }}{% endblock %}
                                            </h1>
                                            <div id="title-bottom">{% block titleBottom %}{% endblock %}</div>
                                        </div>
                                    {% endblock titleContainer %}
                                </div>
                            </header>
                        {% endblock title %}
                    </div>


                    <div id="featured2">
                        {% block featured2 %}{% endblock %}
                    </div>
                {% endblock header %}
            </div>


            <article id="content-wrapper">
                {% block contentWrapper %}

                    <div id="content-container" class="container mx-auto px-2 py-5">
                        {% block contentContainer %}

                            <div id="container-top">
                                {% block containerTop %}{% endblock %}
                            </div>

                            <div id="content-area">
                                {% block contentArea %}
                                    <div id="main-row" class="xl:grid  xl:grid-cols-12 gap-16">

                                        <div id="content-primary-area" class="xl:col-span-9">
                                            {% block contentPrimaryArea %}
                                                <div id="content-top">
                                                    {% block contentTop %}{% endblock %}
                                                </div>

                                                <div id="content">
                                                    {% block content %}{% endblock %}
                                                </div>

                                                <div id="content-bottom">
                                                    {% block contentBottom %}{% endblock %}
                                                </div>

                                                <div id="content-nav">
                                                    {% block contentNav %}
                                                        {% if global_navCondition is defined %}
                                                            {% include '_layouts/partials/entry_nav.twig' with {
                                                                condition:global_navCondition
                                                            } %}
                                                        {% endif %}
                                                    {% endblock %}
                                                </div>

                                            {% endblock contentPrimaryArea %}
                                        </div>


                                        <div id="content-secondary-area"
                                             class="xl:col-span-3 border-t border-secondary mt-8 pt-6 xl:border-0 xl:mt-0 xl:pt-0">
                                            {% block contentSecondaryArea %}
                                                <div id="secondary-content-top">
                                                    {% block secondaryContentTop %}{% endblock %}
                                                </div>
                                                <aside id="secondary-content">
                                                    {% block secondaryContent %}{% endblock %}
                                                </aside>
                                                <div id="secondary-content-bottom">
                                                    {% block secondaryContentBottom %}{% endblock %}
                                                </div>

                                            {% endblock contentSecondaryArea %}
                                        </div>

                                    </div>
                                {% endblock contentArea %}
                            </div>

                            <div id="container-bottom">
                                {% block containerBottom %}{% endblock %}
                            </div>

                        {% endblock contentContainer %}

                    </div>

                {% endblock contentWrapper %}
            </article>
        {% endblock canvas %}
    </div>

    <div id="footer">
        {% block footer %}
            <footer class="px-12 py-3 {{ global_footerClass ?? '' }}">
                <div class="mx-5">
                    <div class="grid grid-cols-1 lg:grid-cols-12">
                        <div id="footer1" class="lg:col-span-5 text-left">
                            {% block footer1 %}
                                &copy; {{ now|date('Y') }} {{ global_siteName }}
                            {% endblock %}
                        </div>

                        <div id="footer2" class="lg:col-span-2  lg:text-center">
                            {% block footer2 %}
                                {% if entry is defined and entry.isEditable %}
                                    <a href="{{ entry.cpEditUrl }}" target="_blank">Edit</a>
                                {% endif %}
                            {% endblock %}
                        </div>

                        <div id="footer3" class="lg:col-span-5 lg:text-right">
                            {% block footer3 %}{% endblock %}
                        </div>
                    </div>
                </div>
            </footer>
        {% endblock footer %}
    </div>

    {% block endBody %}{% endblock %}
    </body>
{% endblock body %}

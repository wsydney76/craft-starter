<!-- Required meta tags -->
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

{% if parseEnv('@ENVIRONMENT') != 'production' %}
    <meta name="robots" content="noindex, nofollow">
{% endif %}

{% if global_localizedElements %}
    <link rel="alternate" href="{{ element.url }}" hreflang="{{ element.language }}">
    {% for localizedElement in global_localizedElements %}
        <link rel="alternate" href="{{ localizedElement.url }}" hreflang="{{ localizedElement.language }}">
    {% endfor %}
{% endif %}

{% if element is defined and element.teaser %}
    <meta name="description" content="{{ element.teaser }}">
{% endif %}

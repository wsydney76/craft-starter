{% set element = element ?? entry ?? craft.app.urlManager.matchedElement %}
{% set global_title = global_title ?? (element ? element.title) %}
{% set global_siteName = global_siteName ?? systemName %}
{% block html %}
<!doctype html>
<html lang="{{ currentSite.language[:2] }}">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    {% if parseEnv('@ENVIRONMENT') != 'production' %}
    <meta name="robots" content="noindex, nofollow">
    {% endif %}

    {% include '_layouts/partials/icon.twig' %}

    {% include '_layouts/partials/assets.twig' %}

    <title>{{ global_title }} {% if  global_title %} | {{ global_siteName }}{% endif %}</title>

</head>
<body class="text-base font-sans">
{% block body %}{% endblock %}
<script src="{{ rev('main.js') }}"></script>
</body>
</html>

{% endblock %}

{% set user = entry.author %}
{% if user %}
    <div class="bg-white mt-10">
        <div class="flex p-4 items-center">
            {% set photo = user.photo %}
            {% if photo %}
                <div class="mr-4">
                    <img class="rounded" src="{{ photo.url({width:100,height:100}) }}" alt="{{ user.fullName }}">
                </div>
            {% endif %}

            <div class="">
                {{ user.fullName }}<br>{{ entry.postDate|date }}
            </div>
        </div>
    </div>
{% endif %}

{% set entries = query.all %}
{% if entries %}
    <div class="space-x-4 mt-3">
        {% for entry in entries %}
            <a class="border-2 border-primary hover:bg-primary hover:text-white transition ease-in-out duration-300 py-2 px-4"
               href="{{ entry.url }}">{{ entry.title }}</a>
        {% endfor %}
    </div>
{% endif %}
